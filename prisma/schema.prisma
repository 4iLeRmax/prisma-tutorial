model User {
  id             String @id @default(uuid())
  email          String @unique
  hashedPassword String
  posts          Post[]
}

model Post {
  id        String   @id @default(uuid())
  title     String   @unique
  slug      String   @unique
  content   String
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@index([slug])
}
